#!/bin/bash

input_file="input.txt"
output_file="output.csv"

awk 'BEGIN { FS = "|\\^"; OFS = "," } {
  for (i = 1; i <= NF; i++) {
    printf "%s%s", $i, (i < NF ? OFS : "")
  }
  print ""
}' "$input_file" > "$output_file"
