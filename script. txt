number=12.65

if [[ $number == *.* ]]; then
    integer_part=$(echo "$number" | awk -F'.' '{print $1}')
    decimal_part=$(echo "$number" | awk -F'.' '{print $2}')
else
    integer_part=$number
    decimal_part=""
fi
